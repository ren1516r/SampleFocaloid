<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/sg_password"
        android:layout_alignStart="@+id/sg_password"
        android:layout_marginTop="18dp"
        android:id="@+id/sg_repassword"
        android:hint="Retype password"
        android:textAllCaps="false"
        tools:textColor="@android:color/white"
        tools:textColorHint="@android:color/white"
        tools:textColorLink="@android:color/background_light"
        android:textColorLink="?android:attr/colorBackground"
        android:paddingLeft="5dp"
        android:textColorHint="@android:color/white" />

    <Button
        android:text="Create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/btn_create"
        android:textAllCaps="false"
        android:background="@drawable/button_border"
        android:textColor="@android:color/white"
        android:layout_below="@+id/sg_repassword"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sg_username"
        android:layout_weight="1"
        android:hint="Username"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColorLink="?android:attr/fastScrollTextColor"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/sg_password"
        android:hint="password"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_below="@+id/sg_username"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"/>
</RelativeLayout>
